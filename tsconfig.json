{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES6",
    "allowJs": true,
    "moduleDetection": "force",
    "outDir": "dist",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2022", "dom", "dom.iterable"]
  }
}
