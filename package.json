{
  "name": "lambdaconnect-js",
  "author": "Szymon Piechaczek",
  "browserslist": "> 0.25%, not dead",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "module": "es/index.js",
  "files": [
    "lib",
    "src",
    "es"
  ],
  "scripts": {
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "babel src --out-dir es",
    "build:flow": "flow-copy-source -v src lib && flow-copy-source -v src es",
    "build": "npm run build:commonjs && npm run build:es && npm run build:flow",
    "clean": "rm -rf lib es",
    "prepare": "npm run clean && npm run build"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "@babel/runtime": "^7.8.7",
    "react": "^16.13.1",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "peerDependencies": {
    "dexie": "^2.0.4",
    "dexie-observable": "^1.0.0-beta.6",
    "react": "*",
    "react-redux": "*",
    "redux": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-flow": "^7.8.3",
    "@types/dexie": "^1.3.1",
    "cross-env": "^7.0.2",
    "flow-bin": "^0.121.0",
    "flow-copy-source": "^2.0.9"
  }
}
